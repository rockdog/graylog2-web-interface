<h1>Configure plugin <span class="highlighted"><%= params[:typeclass] %></span></h1>

<% if @requested_fields.blank? %>
	<strong>Plugin did not request any configuration.</strong>
	<br />
<% else %>
	<%= form_tag "/plugin_configuration/configure/#{params[:plugin_type]}/#{params[:typeclass]}" do %>

		<dl class="plugin-configuration">
			<% @requested_fields.each do |field, title| %>
				<dt><%= label_tag "config[#{field}]", title %></dt>
				<dd><%= text_field_tag "config[#{field}]", @config.configuration[field], :size => 50 %></dd>
			<% end %>
		</dl>

		<br />
		<%= awesome_submit_link "Save configuration" %>

	<% end %>
<% end %>

<br />
<%= link_to "Back to the system settings", systemsettings_path %>